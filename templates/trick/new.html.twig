{% extends 'base.html.twig' %}

{% block title %}Snowtricks! | create trick{% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">{{ 'trick.header.new.title'|trans({}, 'form') }}</h1>

        <!-- Contact Form -->
        <div class="row">
            <div class="col-lg-8 mb-4">

                {{ form_start(trickForm) }}

                {{ form_row(trickForm.name) }}
                {{ form_row(trickForm.description) }}
                {{ form_row(trickForm.trickGroup) }}
                {{ form_row(trickForm.photos) }}

                <ul class="videos"
                    data-prototype="{{ form_widget(trickForm.videos.vars.prototype)|e }}">

                    {% for video in trickForm.videos %}
                        <li>
                            {{ form_row(video) }}
                        </li>
                    {% endfor %}
                </ul>

                <button type="submit" class="btn btn-primary"
                        formnovalidate>{{ 'trick.form.button.create'|trans({}, 'form') }}</button>

                {{ form_end(trickForm) }}

            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->

{% endblock %}
