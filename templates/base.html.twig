<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{{ 'title'|trans({}, 'seo') }}{% endblock %}</title>
    <meta name="description" content="{{ 'description'|trans({}, 'seo') }}">

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon_snowboard.ico') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon_snowboard.ico') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon_snowboard.ico') }}">
    <link rel="manifest" href="">
    <link rel="mask-icon" href="" color="#f4199a">
    <meta name="msapplication-config" content="">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
        <link href="{{ asset('css/modern-business.css') }}" rel="stylesheet">
        <link href="{{ asset('css/snow-trick.css') }}" rel="stylesheet">
    {% endblock %}

</head>

<body>

{{ include('layout/nav.html.twig') }}

<div class="main-content">

    {{ include('layout/alerts.html.twig') }}

    {% block body %} {% endblock %}

</div>



{{ include('layout/footer.html.twig') }}

{% block javascripts %}
    <script src="{{ asset('js/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/modern-business/contact_me.js') }}"></script>
    <script src="{{ asset('js/modern-business/add-collection-widget.js') }}"></script>
    <script src="{{ asset('js/modern-business/jqBootstrapValidation.js') }}"></script>
    <script src="{{ asset('js/modern-business/mobile_medias_hider.js') }}"></script>
    <script src="{{ asset('js/modern-business/scroll_arrows.js') }}"></script>
    <script src="{{ asset('js/modern-business/modale_confirm.js') }}"></script>
    <script src="{{ asset('js/modern-business/load_more.js') }}"></script>

{% endblock %}

</body>
</html>
